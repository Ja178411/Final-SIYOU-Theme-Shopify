{% assign background_rgb = section.settings.background_color | color_to_rgb %}
{% assign text_rgb = section.settings['color-body-text'] | color_to_rgb %}

<style>
    [data-section-id="{{ section.id }}"]{
      --section-gap-top: {{ section.settings.margin-top }}px;
      --section-gap-bottom: {{ section.settings.margin-bottom }}px;

      --content-direction: {{ section.settings.content_direction }};
      --content-direction-desktop: {{ section.settings.content_direction_desktop }};

      --flex-gap: {{ section.settings.gap }}px;
      --flex-gap-desktop: {{ section.settings.gap_desktop }}px;

      {% if section.settings.content_direction == 'row' %}
        --horizontal-alignment: {{ section.settings.horizontal_alignment }};
        {% if section.settings.align_baseline and section.settings.vertical_alignment == 'flex-end' %}
          --vertical-alignment: last baseline;
        {% else %}
          --vertical-alignment: {{ section.settings.vertical_alignment }};
        {% endif %}
      {% else %}
        --horizontal-alignment: {{ section.settings.horizontal_alignment_flex_direction_column }};
        --vertical-alignment: {{ section.settings.vertical_alignment_flex_direction_column }};
      {% endif %}

      {% if section.settings.content_direction_desktop == 'row' %}
        --horizontal-alignment-desktop: {{ section.settings.horizontal_alignment_desktop }};
        --vertical-alignment-desktop: {{ section.settings.vertical_alignment_desktop }};
        {% if section.settings.align_baseline_desktop and section.settings.vertical_alignment_desktop == 'flex-end' %}
          --vertical-alignment-desktop: last baseline;
        {% else %}
          --vertical-alignment-desktop: {{ section.settings.vertical_alignment_desktop }};
        {% endif %}
      {% else %}
        --horizontal-alignment-desktop: {{ section.settings.horizontal_alignment_flex_direction_column_desktop }};
        --vertical-alignment-desktop: {{ section.settings.vertical_alignment_flex_direction_column_desktop }};
      {% endif %}


    {% if background_rgb != 'rgba(0, 0, 0, 0.0)' %}
      --color-background: {{ section.settings.background_color }};
    {% endif %}


    {% if text_rgb != 'rgba(0, 0, 0, 0.0)' %}
      --color-custom-text: {{ section.settings.color-body-text }};
    {% endif %}
    --grid-gap-mobile: {{ section.settings.spacing_mobile }}px;
  }

  [data-section-id="{{ section.id }}"] .headline__title{
    {% if text_rgb != 'rgba(0, 0, 0, 0.0)' %}
      --color-custom-text: {{ section.settings.color-body-text }};
    {% endif %}
    }
</style>

{% if section.settings['full-width-enabled'] %}
  {% assign width_line = 'hero__wrapper--full' %}
{% else %}
  {% assign width_line = 'hero__wrapper' %}
{% endif %}

{% capture children %}
  {% content_for 'blocks' %}
{% endcapture %}

<div
  data-section-id="{{ section.id }}"
  class="custom-section"
>
  {% if section.settings.title != blank %}
    <div class="headline {% if settings.animations %} scroll-trigger animate--slide-in {% endif %} {% if settings.disabled_animations_on_mobile %} disabled-on-mobile {% endif %} {% if section.settings.heading_disable_on_mobile == true %} hero__title--mobile{% endif %}  {% if section.settings.disable_on_mobile %}disable-on-mobile{% endif %}">
      {% render 'simple-block', prefix: 'headline', title: section.settings.title %}
    </div>
  {% endif %}

  <div
    class="
      custom-section__wrapper {{ width_line }}
      {% if section.settings.content_direction == 'row' %}
        custom-section__wrapper--row
      {% else %}
        custom-section__wrapper--column
      {% endif %}
      {% if section.settings.content_direction_desktop == 'row' %}
        custom-section__wrapper--row-desktop
      {% else %}
        custom-section__wrapper--column-desktop
      {% endif %}
    "
  >
    {{ children }}
  </div>
</div>

